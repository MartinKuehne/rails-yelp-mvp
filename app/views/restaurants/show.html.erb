<h1><%= @restaurant.name %> </h1> 
<p> City: <%= @restaurant.address %></p>
    <p> Category: <%= @restaurant.category %></p>
    <% if @restaurant.phone_number != nil  %>
      <p> Number: <%= @restaurant.phone_number %></p>
    <% end  %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.rating %>
      <%= review.content %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a rating", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
